# Frontend public URL used by browser requests
# Use your Render service URL until you set up api.linecite.com DNS
NEXT_PUBLIC_API_URL=https://linecite-api.onrender.com

# Optional server-side override for Next.js route handlers/SSR
# (same as public URL on Vercel since there's no internal network)
API_URL=https://linecite-api.onrender.com

# NextAuth settings
NEXTAUTH_URL=https://linecite.com
AUTH_SECRET=replace-with-strong-random-secret
API_INTERNAL_AUTH_MODE=jwt
API_INTERNAL_JWT_SECRET=replace-with-same-strong-secret-as-backend

# Strict mode (disable for initial setup, enable when ready)
HIPAA_ENFORCEMENT=false
NEXT_PUBLIC_HIPAA_ENFORCEMENT=false

# Demo users â€” enable for testing, disable in production
AUTH_ALLOW_DEMO_USERS=true
NEXT_PUBLIC_AUTH_ALLOW_DEMO_USERS=true
