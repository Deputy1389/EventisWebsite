# Frontend public URL used by browser requests
NEXT_PUBLIC_API_URL=https://api.ontogra.com

# Optional server-side override for Next.js route handlers/SSR
API_URL=http://citeline-api.internal:8000

# NextAuth settings
NEXTAUTH_URL=https://app.ontogra.com
AUTH_SECRET=replace-with-strong-random-secret
API_INTERNAL_AUTH_MODE=jwt
API_INTERNAL_JWT_SECRET=replace-with-same-strong-secret-as-backend

# Strict mode
HIPAA_ENFORCEMENT=true
NEXT_PUBLIC_HIPAA_ENFORCEMENT=true

# Demo users should be disabled in HIPAA mode.
AUTH_ALLOW_DEMO_USERS=false
NEXT_PUBLIC_AUTH_ALLOW_DEMO_USERS=false
